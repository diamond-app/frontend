{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["esnext", "dom", "ES2020.BigInt"],
    "paths": {
      "models": ["dist/models"],
      "models/*": ["dist/models/*"]
    },
    "plugins": [
      {
        "name": "typescript-strict-plugin"
      }
    ],
    "useDefineForClassFields": false
  }
}
